  pp.pprint(client.getOrderById(eval(args[0]),))

elif cmd == 'getAllOrders':
  if len(args) != 0:
    print('getAllOrders requires 0 args')
    sys.exit(1)
  pp.pprint(client.getAllOrders())

elif cmd == 'updateOrderStatus':
  if len(args) != 2:
    print('updateOrderStatus requires 2 args')
    sys.exit(1)
  pp.pprint(client.updateOrderStatus(eval(args[0]),eval(args[1]),))

elif cmd == 'getAvailablePizzas':
  if len(args) != 0:
    print('getAvailablePizzas requires 0 args')
    sys.exit(1)
  pp.pprint(client.getAvailablePizzas())

else:
