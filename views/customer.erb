<!-- customer view -->

<div class="wrapper">
  <header class="header">
    <div class="main-header">
      <h1>Pizza Rupy</h1>
    </div>
  </header>

  <main class="main">
    <div class="contact-form">
      <label for="name" class="order-input-label">Име:</label>
      <input type="input" class="order-input" name="name" id="name">
      <label for="name" class="order-input-label">Адрес:</label>
      <input type="input" class="order-input" name="address" id="address">
      <label for="name" class="order-input-label">Телефон:</label>
      <input type="phone" class="order-input" name="phone" id="phone">

      <button class="next-button">Напред</button>
    </div>

    <div class="pizzas-form hidden"> 
      <div class="pizzas-container">
        <% pizzas[:pizzas].each do |pizza| %>
          <div class="pizza-wrapper" id="<%= pizza[1][:id] %>">
            <div class="pizza-image" style="background-image: url('<%= pizza[1][:image]%>')">
            </div>
            <div class="pizza-description">
              <p class="pizza-heading"><%= pizza[0] %></p>
              <hr class="pizza-heading-separator">
              <p class="pizza-ingredients"><%= pizza[1][:products].join ", " %></p>
            </div>
            <div class="pizza-order">
              <button>Добави в количка</button>
            </div>
          </div>
        <% end %>
      </div>
      <button class="next-button">Напред</button>
    </div>

    <div class="order-review hidden">
      <h2>Преглед на поръчката</h2>

      <div class="review-container">
        <span>Име: Мартин Христов</span>
        <span>Адрес: София, Студентски град, 42Б</span>
        <span>Телефон: +359 899 179 582</span>

        <span>Пица: алфредо</span>
      </div>

      <button id="order-pizza">Поръчай</button>
    </div>
  </main>
</div>